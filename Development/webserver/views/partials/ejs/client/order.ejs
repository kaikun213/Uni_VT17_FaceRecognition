<link rel="stylesheet" href="/css/client/order.css">
<script src="js/client/order.js"></script>

<script>
  var user = <%- JSON.stringify(username?username:'') %>;
</script>

<div class="container">
  <div class="row col-xs-12">
    <h2>Din varukorg</h2>
    <p>ANTAL <span id="count"></span></p>
    <p>PRIS <span id="price"></span></p>
    <button type="button" name="buy_button" onclick="place_order()" class="btn btn-info sharp"><i class="fa fa-shopping-cart" aria-hidden="true"></i> &nbsp; KÖP </button>
  </div>
  <div class="row col-xs-12">
    <ul id="basket_list"></ul>
  </div>
</div>

<div id=popup-container>
  <div id="popup">
    <div>
      <p>Var vänlig och fyll in dina uppgifter</p>
      <form id="userinfo">
        <div class="form-group">
          <label for="address">ADDRESS</label>
          <input class="form-control" type="text" name="address" value="" placeholder="Din address">
        </div>

        <div class="form-group">
          <label for="name">NAMN</label>
          <input class="form-control" type="text" name="name" value="" placeholder="Ditt namn">
        </div>

        <input onclick="updateUser()" type="button" name="submit" class="btn btn-submit" value="KLAR">
      </form>
    </div>
  </div>
</div>

<br><br>
